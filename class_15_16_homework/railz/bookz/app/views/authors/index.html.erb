<p id="notice"><%= notice %></p>
<hr><hr>
<h3>Authors</h3>
<hr>

<table>
  <thead>
    <tr>
      <th><i>The Authors</i></th>
      <th colspan="3"></th>
    </tr>
  </thead>
<hr>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.author_name %></td>
        <td><%= link_to 'Info', author %></td>
        <td><%= link_to 'edit', edit_author_path(author) %></td>
        <td><%= link_to 'Ditch-It', author, method: :delete, data: { confirm: 'Sure about that?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<hr>
<%= link_to 'New Author', new_author_path %>
<hr><hr>
