<hr><hr>
<h3>Bookz</h3>
<hr>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<hr>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.genre %></td>
        <td><%= book.year %></td>
        <td></td>
        <td><%= link_to 'Info', book %></td>
        <td></td>
        <td><%= link_to 'edit', edit_book_path(book) %></td>
        <td></td>
        <td><%= link_to 'Ditch-It', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
